<layout version="0.1.0">

    <catalog_product_view>
        <reference name="head">
            <action method="addItem"><type>js</type><name>mageup/productreviews/reviews.js</name></action>
        </reference>
        <reference name="content">
            <block type="productreviews/template" name="productreviews.review" template="mageup/productreviews/reviews.phtml">
                <block type="productreviews/template" name="review.mock" template="mageup/productreviews/reviews/review.phtml"/>
            </block>
        </reference>
    </catalog_product_view>

    <default>
        <reference name="left">
            <block type="productreviews/sidebar" name="productreviews_sidebar_left">
                <block type="productreviews/template" name="review.mock" template="mageup/productreviews/sidebar/default/review.phtml"/>
            </block>
        </reference>
        <reference name="right">
            <block type="productreviews/sidebar" name="productreviews_sidebar_right">
                <block type="productreviews/template" name="review.mock" template="mageup/productreviews/sidebar/default/review.phtml"/>
            </block>
        </reference>
        <reference name="head">
            <action method="addItem">
                <type>js</type>
                <name>mageup/productreviews/list.js</name>
            </action>
            <action method="addItem">
                <type>skin_css</type>
                <name>css/mageup/productreviews.css</name>
            </action>
        </reference>
    </default>

</layout>